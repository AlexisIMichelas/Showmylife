{# templates/article/show_articles.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}{{ article.name }}{% endblock %}

{% block body %}
    <h1>{{ article.name }}</h1>

    <ul>
        {% for article in category.articles %}
            <li>
                <p>{{ article.description }}</p>
            </li>
        {% endfor %}
    </ul>
{% endblock %}
