{% extends 'base.html.twig' %}

{% block title %}{{ category.name }}{% endblock %}

{% block body %}
    <h1 class="titre-haut text-center text-secondary mb-5 text-uppercase">{{ category.name }}</h1>

    <div class="container mt-5">
        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 row-cols-1 m-auto">
            {% for article in category.articles %}
                <div class="col text-center">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">{{ article.name }}</h5>
                            <p class="card-text">{{ article.description }}</p>
                            <a href="{{ path('article_show', {'id': article.id}) }}" class="btn btn-secondary">Voir l'article</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
