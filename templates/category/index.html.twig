{% extends 'base.html.twig' %}

{% block title %}
Categories
{% endblock %}

{% block body %}
<div class="container">
    {% if app.user %}
        <h1 class="text-white text-center mb-3">Les catégories :</h1>

        <div class="row">
            {% for category in categories %}
                <div class="col-md-4">
                    <div class="card mb-3">
                        <div class="card-header" id="heading{{ category.id }}">
                            <h2 class="mb-0">
                                <a href="{{ path("category_show", {'id': category.id}) }}" class="btn btn-secondary p-4 w-100">{{ category.name}}</a>
                            </h2>
                        </div>

                        <div id="collapse{{ category.id }}" class="collapse" aria-labelledby="heading{{ category.id }}">
                            <div class="card-body">
                                <ul class="list-group">
                                    {% for article in category.articles %}
                                        <li class="list-group-item">{{ article.name }}</li>
                                    {% endfor %}
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <p>Connectez-vous pour accéder à la liste des catégories.</p>
    {% endif %}
</div>
{% endblock %}
