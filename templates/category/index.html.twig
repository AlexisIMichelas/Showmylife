{% extends 'base.html.twig' %}

{% block title %}Hello CategoryController!{% endblock %}

{% block body %}
<div class="container">
    <h1>Liste des cat√©gories</h1>

    <div class="accordion" id="categoriesAccordion">
        {% for category in categories %}
            <div class="card">
                <div class="card-header" id="heading{{ category.id }}">
                    <h2 class="mb-0">
                        <a href="{{ path("category_show", {'id': category.id}) }}" class="link-animation btn btn-secondary p-4 mb-5 w-75">{{ category.name}}</a>
                    </h2>
                </div>

                <div id="collapse{{ category.id }}" class="collapse" aria-labelledby="heading{{ category.id }}" data-parent="#categoriesAccordion">
                    <div class="card-body">
                        <ul class="list-group">
                            {% for article in category.articles %}
                                <li class="list-group-item">{{ article.name }}</li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
