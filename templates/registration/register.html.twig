{% extends 'base.html.twig' %}

{% block title %}
	Inscription
{% endblock %}

{% block body %}
	{% for flash_error in app.flashes('verify_email_error') %}
		<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
	{% endfor %}

	<div class="container mt-5">
		<div class="row">
			<div class="col-md-8 offset-md-3">
				<div class="text-white">
					<h1>Inscrivez-vous</h1>

					{{ form_errors(registrationForm) }}

					{{ form_start(registrationForm) }}
					<div class="form-group row">
						<div class="col">
							{{ form_row(registrationForm.name, {'label': 'Nom', 'attr': {'class': 'form-control', 'placeholder': 'Nom'}}) }}
						</div>
					</div>
					<div class="form-group row">
						<div class="col">
							{{ form_row(registrationForm.email, {'label': 'Email', 'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}
						</div>
					</div>
					<div class="form-group row">
						<div class="col">
							{{ form_row(registrationForm.plainPassword, {'label': 'Mot de passe', 'attr': {'class': 'form-control', 'placeholder': 'Mot de passe'}}) }}
						</div>
					</div>
					<div class="form-group row">
							<a href="{{ path('app_cgu') }}" class="form-check-label"</a>
					</div>

					<button type="submit" class="btn btn-primary">Enregistrer</button>
					{{ form_end(registrationForm) }}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
